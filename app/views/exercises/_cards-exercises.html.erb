<div class="cards">
  <% exercises.each do |exercise| %>
    <div class="exercise-card">
      <div class="badge">Hot</div>
      <div class="exercise-tumb">
        <%= image_tag "#{exercise.language}.png" %>
      </div>
      <div class="exercise-details">
        <span class="exercise-category"><%=exercise.category%></span>
          <h4 data-turbolinks="false"><%= link_to exercise.name, "exercises_#{exercise.language}/#{exercise.number}/exercise_#{exercise.number}.html" %></h4>
            <p><%= exercise.description%></p>
        <div class= "card-line-header-x"></div>
        <div class="exercise-card-stats clearfix ">
          <div class="one-third">
            <div class="stat"><%= exercise.number %><sup>st</sup></div>
            <div class="stat-value">Training</div>
          </div>
          <div class="one-third">
            <div class="stat"><%= exercise.time%></div>
            <div class="stat-value">Minutes</div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
